package modules;

import java.awt.BorderLayout;
import java.awt.Dimension;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTextArea;
import javax.swing.JViewport;

public class ManualInputPopup extends JFrame{
	String input;
	JButton cancel;
	JButton ok;
	JFrame frame;
	JTextArea inputfield;
	JPanel buttonsPanel;
	
	
	public ManualInputPopup(){
		//init frame 
		this.frame = new JFrame("Please write the input");
		frame.setDefaultCloseOperation(EXIT_ON_CLOSE);
		frame.setSize(new Dimension(800, 600));
		frame.setLocationRelativeTo(null);
		frame.setLayout(new BorderLayout());
		
		//setButtons
		this.cancel=new JButton("Cancel");
		this.ok= new JButton("OK");
		System.out.println("this is ok" + ok.getName() + "   " + cancel.getName());
		this.buttonsPanel = new JPanel();
		this.buttonsPanel.add(this.ok);
		this.buttonsPanel.add(this.cancel);
		System.out.println("this is ok too " + buttonsPanel.getComponentCount());
		
		this.frame.add(buttonsPanel, BorderLayout.PAGE_END);
		System.out.println("this will be fun cnt :"  + frame.getComponentCount() +" cnt: " + frame.getName());
		setVisible(true);
		//pack();
		//dispose();
	}
	
}
